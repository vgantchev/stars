!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Cw2'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Cw2'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    = render 'layouts/navigation'
    .container
      .notice#notice-success{ hidden: true}
        .alert.alert-success
          = notice.html_safe if notice rescue nil

      .notice#notice-error{ hidden: true }
        .alert.alert-error
          = fast_alert.html_safe if fast_alert rescue nil

      = yield
